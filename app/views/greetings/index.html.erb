<h1>List All Greetings</h1>
<p><%= link_to 'Create Greeting', greetings_path, method: :new %></p>
<div class='main'>
	<div class='c1'><h2>Index</h2></div>
	<div class='c2'><h2>Description</h2></div>
	<div class='c1'><h2>Change</h2></div>
	<div class='clear'></div>
	<% @greeting.each do |greet| %>
		<div class='c1'><p><%= greet.id %></p></div>
		<div class='c2'><p><%= greet.greeting %></p></div>
		<div class='c1'><p><%= link_to "Edit", edit_greeting_path(greet) %></p></div>
		<div class='c1'><p><%= link_to "Delete", greet, method: :delete %></p></div>
		<div class='clear'></div>
	<% end %>
</div>
